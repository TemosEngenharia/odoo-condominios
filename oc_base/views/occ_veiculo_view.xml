<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE openerp>
<openerp>
  <data>
  	<!-- Action to open OCCadastro.Vaga -->
  	<act_window id="action_occ_veiculo" name="Registro de Veiculo" res_model="occ.veiculo" view_mode="tree,form"/>

  	<!-- Menu item to open OCCadastro Vaga -->
  	<menuitem id="menu_occ_veiculo" name="Veiculo" parent="oc_Register" sequence="5" action="action_occ_veiculo" groups="group_occ_manager,group_occ_user"/>
  </data>
  <record id="view_tree_occ_veiculo" model="ir.ui.view">
  	<field name="name">Veiculo tree</field>
  	<field name="model">occ.veiculo</field>
  	<field name="groups_id" eval="[(4, ref('group_occ_manager')),(4, ref('group_occ_user'))]"/>
  	<field  name="arch" type="xml">
   		<tree>
   			<field name="name"/>
   			<field name="tipo" widget="selection"/>
   			<field name="morador_id"/>
   			<field name="status"/>
   		</tree>
   	</field>
  </record>
  <record id="view_form_occ_veiculo" model="ir.ui.view">
  	<field name="name">Veiculo Form</field>
  	<field name="model">occ.veiculo</field>
  	<field name="groups_id" eval="[(4, ref('group_occ_manager')),(4, ref('group_occ_user'))]"/>
  	<field  name="arch" type="xml">
   		<form string="Veículo">
   			<header>
   				<!-- Aqui vão os botões -->
   			</header>
   			<sheet>
			  <group name="group_top">
      			<group name="group_left">
        			<field name="name"/>
	  				<field name="tipo" widget="radio"/>
		   			<field name="status" widget="radio"/>
	   				<field name="tag_id"/>
	  				<field name="morador_id"/>
      			</group>
      			<group name="group_right">
      			</group>
    		  </group>
   			</sheet>
  		</form>
   	</field>
  </record>
</openerp>
